<% layout('/layouts/boilerplate.ejs') %>
<link rel="stylesheet" href="/stylesheets/image-checkbox.css">

<h1 class="text-center">Edit Shoes</h1>
<div class="col-md-6 offset-md-3">
    <div class="card shadow">
        <div class="card-body">
            <form action="/shoes/<%=shoes._id%>?_method=PUT" method="POST" class="validated-form" novalidate
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="shoes[title]" id="title" value="<%=shoes.title%>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="model">Model</label>
                    <input class="form-control" type="text" name="shoes[model]" id="model" value="<%=shoes.model%>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="brand">Brand</label>
                    <input class="form-control" type="text" name="shoes[brand]" id="brand" value="<%=shoes.brand%>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="size">Size(s)</label>
                    <input class="form-control" type="text" name="shoes[size]" id="size" value="<%=shoes.size%> "
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>


                <div class="mb-3">
                    <label for="price" class="form-label">Shoes Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" name="shoes[price]" placeholder="0.00" id="price"
                            aria-label="Price" value="<%=shoes.price%> " required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="shoes[description]" id="description"
                        required><%=shoes.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Category(s)</label>
                    <div class="form-check">
                        <input name="shoes[categories]" class="form-check-input" type="checkbox" value="sport"
                            id="cat-sport" <% if (shoes.categories.includes('sport')) { %> checked <% }%>>
                        <label class="form-check-label" for="cat-sport">
                            Sport Shoes
                        </label>
                    </div>
                    <div class="form-check">
                        <input name="shoes[categories]" class="form-check-input" type="checkbox" value="formal"
                            id="cat-formal" <% if (shoes.categories.includes('formal')) { %> checked <% }%>>
                        <label class="form-check-label" for="cat-formal">
                            Formal Shoes
                        </label>
                    </div>
                    <div class="form-check">
                        <input name="shoes[categories]" class="form-check-input" type="checkbox" value="rest"
                            id="cat-rest" <% if (shoes.categories.includes('rest')) { %> checked <% }%>>
                        <label class="form-check-label" for="cat-rest">
                            Rest Shoes
                        </label>
                    </div>
                    <div class="form-check">
                        <input name="shoes[categories]" class="form-check-input" type="checkbox" value="shoes"
                            id="cat-shoes" <% if (shoes.categories.includes('shoes')) { %> checked <% }%>>
                        <label class="form-check-label" for="cat-shoes">
                            Shoes
                        </label>
                    </div>

                </div>
                <div class="mb-3">
                    <label class="form-label">Color(s)</label>
                    <div class="form-check">
                        <input name="shoes[colors]" class="form-check-input" type="checkbox" value="black" id="cl-black"
                            <% if (shoes.colors.includes('black')) { %> checked <% }%>>
                        <label class="form-check-label" for="cl-black">
                            Black
                        </label>
                    </div>
                    <div class="form-check">
                        <input name="shoes[colors]" class="form-check-input" type="checkbox" value="white" id="cl-white"
                            <% if (shoes.colors.includes('white')) { %> checked <% }%>>
                        <label class="form-check-label" for="cl-white">
                            White
                        </label>
                    </div>
                    <div class="form-check">
                        <input name="shoes[colors]" class="form-check-input" type="checkbox" value="red" id="cl-red"
                            <% if (shoes.colors.includes('red')) { %> checked <% }%>>
                        <label class="form-check-label" for="cl-red">
                            Red
                        </label>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Choose Image(s)</label>
                    <div class="custom-file">
                        <input class="form-control custom-file-input" type="file" id="image" name="image" multiple>
                        <label for="image" class="form-label custom-file-label"></label>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Delete Image?</label>
                    <ul>
                        <% shoes.images.forEach(function(img, i) { %>
                        <li>
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>" />
                            <label for="image-<%=i%>" class="img-label"><img src="<%= img.thumbnail%>" /></label>
                        </li>
                        <% })%>
                    </ul>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info w-100">Update Shoes</button>
                </div>
            </form>
            <a href="/shoes/<%=shoes._id%> ">Back To Last Shoes</a>

        </div>
    </div>
</div>